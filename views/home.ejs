
    <h1>codeial / <%=title%></h1>
   

    <section id="feed-posts">
        <% if(locals.user){%>
            <h4>Post</h4>
            <form action="posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" placeholder="type here.." rows="3"></textarea>
                <input type="submit" value="Post">
            </form>
        <%}%>
        <div id="post-list-container">
            <ul>
                <% for(post of posts){ %>
                    <li>
                        <%= post.content%>
                        <br>
                        <small>
                            <%= post.user.name%>
                        </small>
                        
                    </li>
                <%}%>
            </ul>
        </div>
    </section>