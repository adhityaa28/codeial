<link rel="stylesheet" href="/css/sign-up.css">
<div class="sign-up-div">
   <h1>Reach Out / <%=title%></h1>
   <div class="sign-up-form">
      <form action="/user/create" method="POST">
         <input type="text" name="name" placeholder="Enter your name" required class="input"><br>
         <input type="email" name="email" placeholder="Enter your email" required class="input"><br>
         <input type="password" name="password" placeholder="password" required class="input">  <br>
         <input type="password" name="confirm_password" placeholder="confirm password" required class="input">  <br>
         <input type="submit" value="sign up" class="submit">
        </form>
   </div>
   <h2>OR</h2>
   <p class="google">
      <a href="/user/auth/google">Google Sign In/Sign up</a>
  </p>
</div>
